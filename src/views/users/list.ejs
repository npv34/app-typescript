<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
    <div class="container">
        <%- include("../layout/Navbar.ejs") %>
            <div class="card mt-2">
                <div class="card-header">
                    <h5 class="card-title">User List
                        <% if(userLogin.role.id==1) { %>
                        <a href="/users/create" class="btn btn-outline-success float-end">Add New</a>
                        <% } %>
                    </h5>
                </div>
                <div class="card-body">
                    
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Role</th>
                                <% if(userLogin.role.id==1) { %>
                                <th scope="col">Action</th>
                                <% } %>
                            </tr>
                        <tbody>
                            <% users.forEach((user, index)=> { %>
                                <tr>
                                    <th scope="row">
                                        <%= index + 1 %>
                                    </th>

                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <%= user.role ? user.role.name : 'Chua o role' %>
                                    </td>

                                    <% if(userLogin.role.id == 1) { %>
                                        <td>
                                            <a href="/users/<%= user.id %>"><button type="button"
                                                    class="btn btn-primary">Edit</button></a>

                                            <% if(userLogin.id !=user.id) { %>
                                                <a onclick="return confirm('are you sure?')"
                                                    href="/users/<%= user.id %>/delete" type="button"
                                                    class="btn btn-danger">Delete</a>
                                            <% } %>

                                        </td>
                                    <% } %>
                                </tr>
                                <% }); %>
                        </tbody>
                        </thead>

                    </table>

                </div>
            </div>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>

</body>

</html>