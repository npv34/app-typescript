<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit user</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
    <div class="container">
        <%- include("../layout/Navbar.ejs") %>
            <div class="card mt-2">
                <div class="card-header">
                    <h5 class="card-title">Edit user
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post" action="/users/<%= userEdit.id %>/edit">
                        <div class="form-group">
                          <label for="exampleFormControlInput1">Email address</label>
                          <input type="email" value="<%= userEdit.email %>" name="email" class="form-control" id="exampleFormControlInput1" placeholder="">
                        </div>
                        <div class="form-group mt-2">
                          <label for="exampleFormControlSelect2">Role</label>
                          <% roles.forEach(role => { %>
                          <div class="form-check form-check-inline">
                            <input <%= userEdit.role && userEdit.role.id == role.id ? "checked" : "" %> name="roleId" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio<%= role.id %>" value="<%= role.id %>">
                            <label class="form-check-label" for="inlineRadio<%= role.id %>"><%= role.name %></label>
                          </div>
                          <% }) %>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a href="/users" class="btn btn-secondary float-end">Back</a>
                    
                      </form>
                

                </div>
            </div>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>

</body>

</html>